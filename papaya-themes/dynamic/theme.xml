          <field-parameter>1.6em</field-parameter>
          <field-parameter>1.7em</field-parameter>
        </value>
        <value name="fontstyle" title="Font Style" field="select">
          <field-parameter>normal</field-parameter>
        </value>
        <value name="fontweight" title="Font Weight" field="select">
          <field-parameter>normal</field-parameter>
        </value>
        <value name="lineheight" title="Line Height" field="select" default="1.5">
          <field-parameter>1</field-parameter>
          <field-parameter>1.2</field-parameter>
          <field-parameter>1.5</field-parameter>
